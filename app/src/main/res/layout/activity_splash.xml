<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Decorative Image -->
    <ImageView
        android:id="@+id/decorImage"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:alpha="0.15"
        android:layout_alignParentTop="true" />

    <!-- Dark overlay to match wireframe shading -->
    <View
        android:id="@+id/darkOverlay"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="#22000000"
        android:layout_alignParentTop="true" />

    <!-- Logo (with embedded title) -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="225dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logoresize"
        android:contentDescription="StreetEats Logo" />

    <!-- Description Text -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        android:text="Locate nearby food trucks in real-time, with live updates on menus and promotions."
        android:textSize="16sp"
        android:textColor="#555555"
        android:gravity="center" />

    <!-- Tagline at bottom -->
    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        android:text="Track, Discover and Enjoy."
        android:textColor="#777777"
        android:textSize="14sp" />

</RelativeLayout>
